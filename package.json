{
  "name": "xbmq",
  "description": "XBee to MQTT gateway",
  "version": "2.0.5",
  "preferGlobal": true,
  "bin": {
    "xbmq": "./xbmq.js"
  },
  "files": [
    "/lib",
    "/xbmq.js",
    "/config.json.sample"
  ],
  "keywords": [
    "xbee",
    "mqtt",
    "iot"
  ],
  "author": {
    "name": "Andrew Bythell",
    "email": "abythell@ieee.org",
    "url": "http://angryelectron.com"
  },
  "repository": {
    "type": "git",
    "url": "angryelectron/xbmq-js"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "mqtt": "^3.0.0",
    "nconf": "^0.10.0",
    "winston": "^3.3.3",
    "xbee-api": "^0.6.0"
  },
  "bundledDependencies": [
    "mqtt",
    "winston",
    "xbee-api",
    "nconf"
  ],
  "optionalDependencies": {
    "serialport": "^8.0.5"
  },
  "scripts": {
    "start": "node xbmq.js",
    "test": "mocha",
    "pretest": "standard",
    "jsdoc": "jsdoc lib -r -R README.md -d doc",
    "doc": "npm run jsdoc && opn doc/index.html",
    "preversion": "npm test && npm run jsdoc",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "chai": "^4.3.3",
    "chai-as-promised": "^7.1.1",
    "jsdoc": "^3.6.6",
    "mocha": "^8.3.1",
    "opn-cli": "^5.0.0",
    "sinon": "^9.2.4",
    "standard": "^16.0.3"
